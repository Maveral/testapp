<%= form_with(model: [post, comment], id: "new_comment_form") do |form| %>
  <% if comment.errors.any? %>
    <div style="color: red">
      <h2><%= t('errors.template.header', count: comment.errors.count) %></h2>

      <ul>
        <% comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :desc, style: "display: block" %>
    <%= form.textarea :desc %>
  </div>

